  "dune" {build & >= "1.1.0"}
  "cohttp" {>= "2.0.0"}
  "lwt" {>= "2.5.0"}
  "sexplib0" {< "v0.13"}
  "ppx_sexp_conv" {>= "v0.9.0" & < "v0.13"}
  "logs"
]
