{
  "build": [
    [
      "bash",
      "-c",
      "#{os == 'windows' ? 'patch -p1 < num-1.1.patch' : 'true'}"
    ],
    [
      "make"
    ]
  ],
  "install": [
    [
      "make",
      "findlib-install"
    ]
  ],
  "exportedEnv": {
    "CAML_LD_LIBRARY_PATH": {
      "val": "#{self.install / 'lib' / 'num' : $CAML_LD_LIBRARY_PATH}",
      "scope": "global"
    }
  }
}
